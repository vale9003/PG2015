@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>DOCTOR - Responsive HTML Template</title>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:600italic,400,800,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=BenchNine:300,400,700' rel='stylesheet' type='text/css'>

</head>
<body>

    <!-- ====================================================
    header section -->
    <header class="top-header">
        <div class="container">
            <div class="row">
                <div class="col-xs-5 header-logo">
                    <br> 
                    <a href=""><img src="~/img/logoSARM.png" alt="" class="img-responsive logo"></a>
                </div>
                <div class="col-md-7">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid nav-bar">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" id="buttonReg">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                                <ul class="nav navbar-nav navbar-right">
                                    <li><a class="menu active" href="#home">Inicio</a></li>
                                    <li><a class="menu" href="#about">Sobre SARM</a></li>
                                    <li><a class="menu" href="#service">Servicios</a></li>
                                    <li><a class="menu" href="#contact" id="login">Iniciar Sesion</a></li>
                                    <li><a class="menu" href="#contact" id="registrar">Registrese</a></li>
                                </ul>
                            </div><!-- /navbar-collapse -->
                        </div><!-- / .container-fluid -->
                    </nav>
                </div>
            </div>
        </div>
    </header> <!-- end of header area -->


    <section class="slider" id="home">
        <div class="container-fluid">
            <div class="row">
                <div id="carouselHacked" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="header-backup"></div>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/img/ha.png" alt="">
                            <div class="carousel-caption">
                                
                                <h1>Agenda Online</h1>
                                <a class="btn btn-info btn-lg" href="#contact" id="r1">Registrese</a>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/img/contacto.png" alt="">
                            <div class="carousel-caption">
                                <h1>Notificaciones</h1>
                                
                                <a class="btn btn-info btn-lg" href="#contact" id="r2">Registrese</a>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/img/nuevaSlide.png" alt="">
                            <div class="carousel-caption">
                                <h1>Medico <br /> de Referencia</h1>
                                
                                <a class="btn btn-info btn-lg" href="#contact" id="r3">Registrese</a>
                            </div>
                        </div>
                        
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carouselHacked" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carouselHacked" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </section><!-- end of slider section -->
    <!-- about section -->
    <section class="about text-center" id="about">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <br /><br /><br /><br /><br />
                    <img src="~/img/NuevoLogo.png" alt="" class="img-responsive center-block">
                    <br />

                </div>
            </div>
            <div class="row">
                <div class="col-md-9 col-md-offset-2">
                    <h4 class="text-left">
                        <em>El Sistema de Agendas de Registros Médicos</em> <strong>SARM</strong>, le permitiá agendar consultas médicas de manera online,
                        cancelar las mismas, tener la posibilidad de comenzar el trámite de elección de médico de referencia,
                        y recibir notificaciones médicas de acuerdo a su sexo y edad, en los medios de comunicación que desee.
                        
                    </h4>
                    <h4 class="text-left">
                        No importa a que Centro de Salud pertenezca, <strong>SARM</strong> busca brindar el acceso universal a todos los residentes del país.
                    </h4>
                </div>
            </div>
        </div>
    </section><!-- end of about section -->
    <!-- service section starts here -->
    <section class="service text-center" id="service">
        <div class="container">
            <div class="row">
             
                 <h2>Servicios</h2>
                 <h4>Buscamos facilitar la interacción con su Centro de Salud </h4>
                <div class="col-md-4 col-sm-6">
                    <div class="single-service">
                        <div class="single-service-img">
                            <div class="service-img">
                                <img class="heart img-responsive" src="~/img/doctor.png" alt="">
                            </div>
                        </div>
                        <h3>Selección de Médico de Referencia</h3>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="single-service">
                        <div class="single-service-img">
                            <div class="service-img">
                                <img class="knee img-responsive" src="~/img/agenda.png" alt="">
                            </div>
                        </div>
                        <h3>Agendar y Cancelar consultas online</h3>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="single-service">
                        <div class="single-service-img">
                            <div class="service-img">
                                <img class="brain img-responsive" src="~/img/alertas.png" alt="">
                            </div>
                        </div>
                        <h3>Notificaciones médicas via E-mail, SMS y Whatsapp de acuerdo a su preferencia</h3>
                    </div>
                </div>
                
            </div>
        </div>
    </section><!-- end of service section -->
   <!-- team section -->
   <!-- end of team section -->
    <!-- map section -->
    <section class="api-map" id="contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 map" id="map"></div>
            </div>
        </div>
    </section><!-- end of map section -->
    <!-- contact section starts here -->
    <section class="contact">
        <div class="container">
            <div class="row vertical-offset-100">
                <div class="col-md-6 col-md-offset-3">
                    <div id="registerLogin">
                        @Html.Partial("Login")
                    </div>
                </div>
                </div>
            </div>
    </section><!-- end of contact section -->
  
    <!-- footer starts here -->
    <footer class="footer clearfix">
        <div class="container">
            <div class="row">
               
            </div>
        </div>
    </footer>


    <!-- script tags
    ============================================================= -->
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <!--<script src="http://maps.google.com/maps/api/js?sensor=true"></script>-->
    <!--<script src="~/Scripts/gmaps.js"></script>-->
    <script src="~/Scripts/smoothscroll.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
    
    <script type="text/javascript">
        $("#login").click(function () {
            $('#registerLogin').load('/home/login');
        });

        $("#registrar").click(function () {
          
            $('#registerLogin').load('/home/register');
        });

        $("#r1").click(function () {
            $('#registerLogin').load('/home/register');
        });

        $("#r2").click(function () {
            $('#registerLogin').load('/home/register');
        });
      
        $("#r3").click(function () {
            $('#registerLogin').load('/home/register');
        });
    </script>

    </body>
</html>